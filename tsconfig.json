{
  "compilerOptions": {
    "target": "esnext", // Set the JavaScript language version for output
    "module": "commonjs", // Specify the module code generation
    "lib": ["es6", "dom"], // Specify library files to include in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure that casing of file names is consistent
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing .json files
    "isolatedModules": true, // Ensure each file can be transpiled independently
    "noEmit": true, // Do not emit output files (useful for type checking only)
    "jsx": "react", // Set the JSX code generation mode
    "baseUrl": "./", // Base directory to resolve non-relative module names
    "paths": {
      "@/*": ["src/*"] // Alias for module resolution
    }
  },
  "include": [
    "src/**/*" // Include all files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "babel.config.js", // Exclude Babel config
    "metro.config.js", // Exclude Metro bundler config
    "jest.config.js" // Exclude Jest config
  ]
}
